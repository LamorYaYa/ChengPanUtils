<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/custom_text_bitmap_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="魔兽世界：这是一个垃圾的游戏，哈哈哈！！"
            android:textColor="@color/custom_text_title_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/custom_text_bitmap_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_text_bitmap_title"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="魔兽世界：这是一个垃圾的游戏，哈哈哈！！"
            android:textColor="@color/custom_line_text_color"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/custom_text_bitmap_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settin" />

    </RelativeLayout>


</LinearLayout>
